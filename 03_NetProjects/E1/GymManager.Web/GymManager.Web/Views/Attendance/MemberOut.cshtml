@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section HeaderRight {
    @await Html.PartialAsync("~/Views/Shared/_UserHeader.cshtml")
}

        <div class="container">
            <h1 class="mt-5">Member Out</h1>

            <p>
                <label>Id: </label>
                <input id="id" class="form-control" type="text" placeholder="Id here" />
            </p>
            <p>
                <button id="register" class="btn btn-info">Register</button>
            </p>
        </div>

        <!-- Modal -->

        <div class="modal fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Exit register</h5>
                    </div>
                    <div class="modal-body">
                        <p>Member: <t id="showId"></t> </p>
                        <p>Departure time: @DateTime.Now.ToString()</p>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>

        @section Scripts {
            <script src="~/functions.js"></script>
        }
